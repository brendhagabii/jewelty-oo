<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="joalheria.control.JanelaEditarProduto">

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>

    <Label text="Selecione o Produto" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <effect>
         <DropShadow />
      </effect></Label>
    <ComboBox fx:id="cbProduto" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <effect>
         <DropShadow />
      </effect></ComboBox>
    <Label text="Nome do Produto" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <effect>
         <DropShadow />
      </effect></Label>
    <TextField fx:id="tfNome" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <effect>
         <DropShadow />
      </effect></TextField>
    <Label text="Descrição" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <effect>
         <DropShadow />
      </effect></Label>
    <TextField fx:id="tfDescricao" GridPane.columnIndex="1" GridPane.rowIndex="2">
      <effect>
         <DropShadow />
      </effect></TextField>
    <Label text="Preço" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <effect>
         <DropShadow />
      </effect></Label>
    <TextField fx:id="tfPreco" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <effect>
         <DropShadow />
      </effect></TextField>

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#voltar" text="Voltar">
         <effect>
            <DropShadow />
         </effect></Button>
        <Button onAction="#salvar" text="Salvar">
         <effect>
            <DropShadow />
         </effect></Button>
        <padding>
            <Insets top="5.0" />
        </padding>
    </HBox>
    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints percentWidth="50.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="50.0" />
        <RowConstraints minHeight="30.0" />
        <RowConstraints minHeight="30.0" />
        <RowConstraints minHeight="30.0" />
      <RowConstraints />
    </rowConstraints>

</GridPane>
